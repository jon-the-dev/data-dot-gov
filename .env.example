# Congressional Transparency Platform Environment Configuration
# Copy this file to .env and update with your configuration

# ============================================================================
# API Keys
# ============================================================================

# Congress.gov API Key (via data.gov)
# Get your free API key at: https://api.data.gov/signup/
DATA_GOV_API_KEY=your_api_key_here

# Senate.gov API Credentials (optional - for authenticated access)
SENATE_GOV_USERNAME=your_username
SENATE_GOV_PASSWORD=your_password

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL Database Settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=congress_transparency
DB_USER=congress_app
DB_PASSWORD=secure_password_change_in_production

# Database Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ============================================================================
# Migration Configuration
# ============================================================================

# Batch Migration Settings
MIGRATION_BATCH_SIZE=1000
MIGRATION_MAX_WORKERS=4
MIGRATION_RETRY_ATTEMPTS=3
MIGRATION_RETRY_DELAY=5

# ============================================================================
# Application Configuration
# ============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Data Storage
DATA_DIRECTORY=data
BACKUP_DIRECTORY=backups

# ============================================================================
# Docker Configuration
# ============================================================================

# Docker Compose Settings
COMPOSE_PROJECT_NAME=congress_transparency

# PostgreSQL Docker Settings
POSTGRES_VERSION=15-alpine
PGADMIN_EMAIL=admin@congress-transparency.local
PGADMIN_PASSWORD=admin_password_change_in_production

# Redis Settings (for caching)
REDIS_VERSION=7-alpine
REDIS_MAXMEMORY=512mb

# ============================================================================
# Production Configuration (DO NOT USE IN PRODUCTION AS-IS)
# ============================================================================

# Security Settings (CHANGE IN PRODUCTION)
SECRET_KEY=development_secret_key_change_in_production
JWT_SECRET=jwt_secret_key_change_in_production

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# ============================================================================
# External Services (Future)
# ============================================================================

# Cache Configuration
CACHE_TYPE=redis
CACHE_TTL=3600

# Monitoring and Analytics
SENTRY_DSN=
ANALYTICS_ID=

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# ============================================================================
# Performance Tuning
# ============================================================================

# API Rate Limiting
CONGRESS_API_RATE_LIMIT=1000
SENATE_API_RATE_LIMIT=120

# Request Timeouts (seconds)
REQUEST_TIMEOUT=30
CONNECTION_TIMEOUT=10

# Parallel Processing
MAX_WORKERS=4
CHUNK_SIZE=100

# ============================================================================
# Development Settings
# ============================================================================

# Development Database (for testing)
TEST_DB_NAME=congress_transparency_test
TEST_DB_HOST=localhost
TEST_DB_PORT=5433

# Debug Settings
SQL_ECHO=false
PROFILING_ENABLED=false

# Development Server
DEV_SERVER_HOST=localhost
DEV_SERVER_PORT=8000
DEV_SERVER_RELOAD=true